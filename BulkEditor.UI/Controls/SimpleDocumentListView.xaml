<UserControl x:Class="BulkEditor.UI.Controls.SimpleDocumentListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:BulkEditor.UI.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             TextElement.Foreground="#212121"
             TextElement.FontWeight="Normal"
             TextElement.FontSize="14"
             TextElement.FontFamily="Segoe UI">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <!-- Modern Material Design Document Item Template -->

        <!-- Material Design Status Chip Template -->
        <DataTemplate x:Key="StatusTemplate" DataType="{x:Type vm:DocumentListItemViewModel}">
            <materialDesign:Chip Background="{Binding StatusBackgroundColor}"
                               Foreground="White"
                               Content="{Binding StatusDisplayText}"
                               FontSize="12"
                               FontWeight="Medium"
                               Margin="4"
                               ToolTip="{Binding StatusDisplayText}"
                               IsEnabled="False">
                <materialDesign:Chip.Style>
                    <Style TargetType="materialDesign:Chip" BasedOn="{StaticResource {x:Type materialDesign:Chip}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMultiLineStatus}" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel>
                                            <TextBlock Text="{Binding StatusTopText}"
                                                     Foreground="White"
                                                     FontSize="12"
                                                     FontWeight="Medium"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding StatusBottomText}"
                                                     Foreground="White"
                                                     FontSize="12"
                                                     FontWeight="Medium"
                                                     HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </materialDesign:Chip.Style>
            </materialDesign:Chip>
        </DataTemplate>

        <!-- Modern Material Design Document Item Template -->
        <DataTemplate x:Key="DocumentItemTemplate" DataType="{x:Type vm:DocumentListItemViewModel}">
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1"
                               Margin="0,0,0,4"
                               Background="#FFFFFF"
                               Padding="16">
                <materialDesign:Card.Style>
                    <Style TargetType="materialDesign:Card">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </materialDesign:Card.Style>
                <materialDesign:Card.ContextMenu>
                    <ContextMenu Style="{StaticResource MaterialDesignContextMenu}">
                        <MenuItem Header="Copy Document Title" 
                                Command="{Binding CopyTitleCommand}" 
                                InputGestureText="Ctrl+C">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="ContentCopy"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Copy Document Path" 
                                Command="{Binding CopyPathCommand}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="FolderOutline"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Copy Document Info" 
                                Command="{Binding CopyInfoCommand}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="InformationOutline"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Open Location" 
                                Command="{Binding OpenLocationCommand}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="FolderOpen"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Remove" 
                                Command="{Binding RemoveCommand}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Delete" Foreground="#F44336"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </materialDesign:Card.ContextMenu>
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Document Type Icon -->
                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="FileDocumentOutline"
                                           Width="24" Height="24"
                                           Foreground="#2196F3"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>

                    <!-- Document Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title}"
                                 Style="{StaticResource BodyTextStyle}"
                                 FontWeight="SemiBold"
                                 TextTrimming="CharacterEllipsis"
                                 ToolTip="{Binding Title}"/>
                        <TextBlock Text="{Binding Location}"
                                 Style="{StaticResource CaptionTextStyle}"
                                 TextTrimming="CharacterEllipsis"
                                 ToolTip="{Binding Location}"
                                 Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Status Display -->
                    <ContentPresenter Grid.Column="2"
                                    ContentTemplate="{StaticResource StatusTemplate}"
                                    Content="{Binding}"
                                    VerticalAlignment="Center"
                                    Margin="8,0"/>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="3" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Center"
                              Margin="8,0">
                        <Button Content="DETAILS"
                              Command="{Binding ViewDetailsCommand}"
                              IsEnabled="{Binding CanViewDetails}"
                              Style="{StaticResource CardActionButtonStyle}"/>
                        <Button Content="OPEN"
                              Command="{Binding OpenLocationCommand}"
                              Style="{StaticResource CardActionButtonStyle}"/>
                    </StackPanel>

                    <!-- Remove Button -->
                    <Button Grid.Column="4"
                          Command="{Binding RemoveCommand}"
                          Style="{StaticResource IconButtonStyle}"
                          Width="32" Height="32"
                          ToolTip="Remove document from list"
                          VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Close" 
                                               Foreground="#F44336"/>
                    </Button>
                </Grid>
            </materialDesign:Card>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Material Design Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                Mode="PrimaryLight"
                                Padding="16"
                                materialDesign:ElevationAssist.Elevation="Dp1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title Row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="FileMultiple"
                                           Width="20" Height="20"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>

                    <TextBlock Grid.Column="1"
                             Text="Documents"
                             Style="{StaticResource SectionHeaderStyle}"
                             VerticalAlignment="Center"/>

                    <materialDesign:Chip Grid.Column="2"
                                       Content="{Binding DocumentItems.Count, StringFormat='{}{0} docs'}"
                                       Background="#2196F3"
                                       Foreground="White"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Material Design Search Row -->
                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0"
                           Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                           Background="White"
                           BorderBrush="#CCCCCC"
                           BorderThickness="1"
                           Padding="8"
                           FontSize="14"
                           VerticalAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <Button Grid.Column="1"
                          Command="{Binding ClearSearchCommand}"
                          Background="Transparent"
                          BorderThickness="0"
                          Width="32"
                          Height="32"
                          ToolTip="Clear search"
                          Margin="8,0,0,0"
                          Cursor="Hand"
                          Visibility="{Binding HasSearchText, Converter={StaticResource BoolToVisConverter}}">
                        <TextBlock Text="✕" 
                                   Foreground="#F44336"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Document List -->
        <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                    Padding="16">
            <ItemsControl ItemsSource="{Binding DocumentItems}"
                        ItemTemplate="{StaticResource DocumentItemTemplate}"
                        Visibility="{Binding HasDocuments, Converter={StaticResource BoolToVisConverter}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel VirtualizationMode="Recycling"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Material Design Empty State -->
        <Grid Grid.Row="1">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasDocuments}" Value="False">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <StackPanel HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Opacity="0.7">
                <materialDesign:PackIcon Kind="FileDocumentMultiple"
                                       Width="64" Height="64"
                                       Foreground="#BDBDBD"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                <TextBlock Text="No documents added"
                         Style="{StaticResource SubtitleTextStyle}"
                         HorizontalAlignment="Center"
                         Foreground="#BDBDBD"/>
                <TextBlock Text="Drag and drop files here or use the Select Files button"
                         Style="{StaticResource CaptionTextStyle}"
                         HorizontalAlignment="Center"
                         Foreground="#BDBDBD"
                         Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>