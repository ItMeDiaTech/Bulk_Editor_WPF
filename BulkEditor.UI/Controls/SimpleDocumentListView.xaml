<UserControl x:Class="BulkEditor.UI.Controls.SimpleDocumentListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:BulkEditor.UI.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             TextElement.Foreground="{DynamicResource OnSurfaceBrush}"
             TextElement.FontWeight="{DynamicResource BodyFontWeight}"
             TextElement.FontSize="{DynamicResource BodyFontSize}"
             TextElement.FontFamily="{DynamicResource AppFontFamily}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <!-- Modern Material Design Document Item Template -->

        <!-- Material Design Status Chip Template -->
        <DataTemplate x:Key="StatusTemplate" DataType="{x:Type vm:DocumentListItemViewModel}">
            <materialDesign:Chip Background="{Binding StatusBackgroundColor}"
                               Foreground="White"
                               Content="{Binding StatusDisplayText}"
                               FontSize="{DynamicResource CaptionFontSize}"
                               FontWeight="Medium"
                               Margin="{DynamicResource SmallSpacing}"
                               ToolTip="{Binding StatusDisplayText}"
                               IsEnabled="False">
                <materialDesign:Chip.Style>
                    <Style TargetType="materialDesign:Chip" BasedOn="{StaticResource {x:Type materialDesign:Chip}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMultiLineStatus}" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel>
                                            <TextBlock Text="{Binding StatusTopText}"
                                                     Foreground="White"
                                                     FontSize="{DynamicResource CaptionFontSize}"
                                                     FontWeight="Medium"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding StatusBottomText}"
                                                     Foreground="White"
                                                     FontSize="{DynamicResource CaptionFontSize}"
                                                     FontWeight="Medium"
                                                     HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </materialDesign:Chip.Style>
            </materialDesign:Chip>
        </DataTemplate>

        <!-- Modern Material Design Document Item Template -->
        <DataTemplate x:Key="DocumentItemTemplate" DataType="{x:Type vm:DocumentListItemViewModel}">
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1"
                               Margin="0,0,0,{DynamicResource SmallSpacing}"
                               Background="{DynamicResource CardBrush}"
                               Padding="{DynamicResource ContentPadding}">
                <materialDesign:Card.Style>
                    <Style TargetType="materialDesign:Card">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </materialDesign:Card.Style>
                <materialDesign:Card.ContextMenu>
                    <ContextMenu Style="{StaticResource MaterialDesignContextMenu}">
                        <MenuItem Header="Copy Document Title" 
                                Command="{Binding CopyTitleCommand}" 
                                InputGestureText="Ctrl+C">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="ContentCopy"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Copy Document Path" 
                                Command="{Binding CopyPathCommand}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="FolderOutline"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Copy Document Info" 
                                Command="{Binding CopyInfoCommand}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="InformationOutline"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Open Location" 
                                Command="{Binding OpenLocationCommand}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="FolderOpen"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Remove" 
                                Command="{Binding RemoveCommand}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Delete" Foreground="{DynamicResource ErrorBrush}"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </materialDesign:Card.ContextMenu>
                <Grid Margin="{DynamicResource ContentPadding}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Document Type Icon -->
                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="FileDocumentOutline"
                                           Width="24" Height="24"
                                           Foreground="{DynamicResource PrimaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>

                    <!-- Document Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title}"
                                 Style="{StaticResource BodyTextStyle}"
                                 FontWeight="{DynamicResource SubtitleFontWeight}"
                                 TextTrimming="CharacterEllipsis"
                                 ToolTip="{Binding Title}"/>
                        <TextBlock Text="{Binding Location}"
                                 Style="{StaticResource CaptionTextStyle}"
                                 TextTrimming="CharacterEllipsis"
                                 ToolTip="{Binding Location}"
                                 Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Status Display -->
                    <ContentPresenter Grid.Column="2"
                                    ContentTemplate="{StaticResource StatusTemplate}"
                                    Content="{Binding}"
                                    VerticalAlignment="Center"
                                    Margin="8,0"/>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="3" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Center"
                              Margin="8,0">
                        <Button Content="DETAILS"
                              Command="{Binding ViewDetailsCommand}"
                              IsEnabled="{Binding CanViewDetails}"
                              Style="{StaticResource CardActionButtonStyle}"/>
                        <Button Content="OPEN"
                              Command="{Binding OpenLocationCommand}"
                              Style="{StaticResource CardActionButtonStyle}"/>
                    </StackPanel>

                    <!-- Remove Button -->
                    <Button Grid.Column="4"
                          Command="{Binding RemoveCommand}"
                          Style="{StaticResource IconButtonStyle}"
                          Width="32" Height="32"
                          ToolTip="Remove document from list"
                          VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Close" 
                                               Foreground="{DynamicResource ErrorBrush}"/>
                    </Button>
                </Grid>
            </materialDesign:Card>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Material Design Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                Mode="PrimaryLight"
                                Padding="{DynamicResource ContentPadding}"
                                materialDesign:ElevationAssist.Elevation="Dp1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title Row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="FileMultiple"
                                           Width="20" Height="20"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>

                    <TextBlock Grid.Column="1"
                             Text="Documents"
                             Style="{StaticResource SectionHeaderStyle}"
                             VerticalAlignment="Center"/>

                    <materialDesign:Chip Grid.Column="2"
                                       Content="{Binding DocumentItems.Count, StringFormat='{}{0} docs'}"
                                       Background="{DynamicResource PrimaryBrush}"
                                       Foreground="{DynamicResource OnPrimaryBrush}"
                                       FontSize="{DynamicResource CaptionFontSize}"
                                       VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Material Design Search Row -->
                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0"
                           Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           materialDesign:HintAssist.Hint="Search by title or file path..."
                           materialDesign:HintAssist.IsFloating="True"
                           materialDesign:TextFieldAssist.HasLeadingIcon="True"
                           materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                           FontSize="{DynamicResource BodyFontSize}"
                           VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1"
                          Command="{Binding ClearSearchCommand}"
                          Style="{StaticResource IconButtonStyle}"
                          ToolTip="Clear search"
                          Margin="8,0,0,0"
                          Visibility="{Binding HasSearchText, Converter={StaticResource BoolToVisConverter}}">
                        <materialDesign:PackIcon Kind="Close" 
                                               Foreground="{DynamicResource ErrorBrush}"/>
                    </Button>
                </Grid>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Document List -->
        <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                    Padding="{DynamicResource ContentPadding}">
            <ItemsControl ItemsSource="{Binding DocumentItems}"
                        ItemTemplate="{StaticResource DocumentItemTemplate}"
                        Visibility="{Binding HasDocuments, Converter={StaticResource BoolToVisConverter}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel VirtualizationMode="Recycling"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Material Design Empty State -->
        <Grid Grid.Row="1">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasDocuments}" Value="False">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <StackPanel HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Opacity="0.7">
                <materialDesign:PackIcon Kind="FileDocumentMultiple"
                                       Width="64" Height="64"
                                       Foreground="{DynamicResource DisabledBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,{DynamicResource LargeSpacing}"/>
                <TextBlock Text="No documents added"
                         Style="{StaticResource SubtitleTextStyle}"
                         HorizontalAlignment="Center"
                         Foreground="{DynamicResource DisabledBrush}"/>
                <TextBlock Text="Drag and drop files here or use the Select Files button"
                         Style="{StaticResource CaptionTextStyle}"
                         HorizontalAlignment="Center"
                         Foreground="{DynamicResource DisabledBrush}"
                         Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>