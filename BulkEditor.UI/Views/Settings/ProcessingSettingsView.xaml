<UserControl x:Class="BulkEditor.UI.Views.Settings.ProcessingSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- General Settings -->
            <GroupBox Header="General Settings">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Consultant Email Address:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding ConsultantEmail}"
                                 HorizontalAlignment="Stretch"
                                 ToolTip="Enter consultant email address for future features"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Theme Settings -->
            <GroupBox Header="Appearance">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Theme:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" 
                                  SelectedItem="{Binding SelectedTheme}"
                                  ItemsSource="{Binding AvailableThemes}"
                                  HorizontalAlignment="Left"
                                  MinWidth="150"
                                  ToolTip="Choose application theme">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Padding="8,4"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    <TextBlock Text="Auto theme follows your Windows system theme preference."
                               FontSize="11" 
                               FontStyle="Italic" 
                               Foreground="Gray"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Import/Export Settings -->
            <GroupBox Header="Settings Management">
                <StackPanel>
                    <TextBlock Text="Export or import all application settings including processing options, replacement rules, and preferences."
                               FontStyle="Italic" 
                               Foreground="Gray" 
                               Margin="0,0,0,12"
                               TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Export All Settings" 
                                Command="{Binding ExportAllSettingsCommand}"
                                Padding="16,8" 
                                Margin="0,0,8,0"
                                Background="#2196F3"
                                Foreground="White"/>
                        <Button Content="Import Settings" 
                                Command="{Binding ImportAllSettingsCommand}"
                                Padding="16,8" 
                                Margin="0,0,8,0"/>
                        <Button Content="Reset to Defaults" 
                                Command="{Binding ResetAllSettingsCommand}"
                                Padding="16,8"
                                Background="#FF5722"
                                Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Batch Processing Settings -->
            <GroupBox Header="Batch Processing">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Batch Size:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Slider Name="BatchSizeSlider"
                                    Value="{Binding BatchSize}"
                                    Minimum="10" Maximum="500"
                                    Width="150"
                                    TickFrequency="50"
                                    IsSnapToTickEnabled="True"/>
                            <TextBlock Text="{Binding ElementName=BatchSizeSlider, Path=Value}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       MinWidth="30"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Processing Options -->
            <GroupBox Header="Processing Options">
                <StackPanel>
                    <TextBlock Text="All detailed processing options including backup settings, concurrency controls, and timeout settings have been moved to the dedicated 'Processing Options' window."
                               FontStyle="Italic" 
                               Foreground="Gray" 
                               Margin="0,0,0,8"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Click the 'Processing Options' button next to 'Process Documents' to configure these settings."
                               FontStyle="Italic" 
                               Foreground="#2196F3" 
                               Margin="0,0,0,8"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>