<Window x:Class="BulkEditor.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:BulkEditor.UI.Views.Settings"
        mc:Ignorable="d"
        Title="Settings - Bulk Document Editor"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700"
        Style="{x:Null}"
        Background="#FEFBFF"
        TextElement.Foreground="#1C1B1F"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="Segoe UI"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        materialDesign:ElevationAssist.Elevation="Dp4">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- MD3 Settings Window Specific Styles -->
        <Style x:Key="SettingsTabStyle" TargetType="TabItem">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FEFBFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Settings Content -->
        <materialDesign:Card Grid.Row="0" 
                           Style="{StaticResource DashboardCardStyle}"
                           Margin="24">
            <TabControl Style="{x:Null}"
                       Background="Transparent"
                       BorderThickness="0">

            <!-- Theme Settings - DISABLED FOR TESTING -->
            <!--<TabItem Header="Theme" Style="{StaticResource SettingsTabStyle}">
                <views:ThemeSettingsView DataContext="{Binding ThemeSettings}"/>
            </TabItem>-->

            <!-- General Settings -->
            <TabItem Header="General" Style="{StaticResource SettingsTabStyle}">
                <views:ProcessingSettingsView DataContext="{Binding ProcessingSettings}"/>
            </TabItem>

            <!-- Validation Settings -->
            <TabItem Header="Validation" Style="{StaticResource SettingsTabStyle}">
                <views:ValidationSettingsView DataContext="{Binding ValidationSettings}"/>
            </TabItem>

            <!-- Logging Settings -->
            <TabItem Header="Error Logging" Style="{StaticResource SettingsTabStyle}">
                <views:LoggingSettingsView DataContext="{Binding LoggingSettings}"/>
            </TabItem>

            <!-- Update Settings -->
            <TabItem Header="Updates" Style="{StaticResource SettingsTabStyle}">
                <views:UpdateSettingsView DataContext="{Binding UpdateSettings}"/>
            </TabItem>

        </TabControl>
        </materialDesign:Card>

        <!-- Action Buttons -->
        <materialDesign:Card Grid.Row="1" 
                           Background="#F4EFF4"
                           materialDesign:ElevationAssist.Elevation="Dp1"
                           Margin="0"
                           Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults"
                        Command="{Binding ResetToDefaultsCommand}"
                        Style="{StaticResource MD3OutlinedButtonStyle}"
                        Margin="0,0,16,0"/>
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MD3OutlinedButtonStyle}"
                        Margin="0,0,16,0"/>
                <Button Content="Save Settings"
                        Command="{Binding SaveSettingsCommand}"
                        Style="{StaticResource MD3FilledButtonStyle}"/>
            </StackPanel>
        </materialDesign:Card>

    </Grid>
</Window>