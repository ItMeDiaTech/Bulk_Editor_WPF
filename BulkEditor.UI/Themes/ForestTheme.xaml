<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Forest Theme - Natural Green-Brown Earth Tones -->
    
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#2E7D32"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="White"/>
    <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#C8E6C9"/>
    <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="#003300"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#1B5E20"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#0F4012"/>
    
    <!-- Secondary Colors -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#689F38"/>
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#DCEDC8"/>
    <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="#1B5E20"/>
    
    <!-- Surface Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F9FBF7"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="#1A1C19"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#1A1C19"/>
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#F1F5EE"/>
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#42524C"/>
    
    <!-- Semantic State Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#388E3C"/>
    <SolidColorBrush x:Key="OnSuccessBrush" Color="White"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F57C00"/>
    <SolidColorBrush x:Key="OnWarningBrush" Color="White"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="OnErrorBrush" Color="White"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#0288D1"/>
    <SolidColorBrush x:Key="OnInfoBrush" Color="White"/>
    
    <!-- Outline and Border Colors -->
    <SolidColorBrush x:Key="OutlineBrush" Color="#72786F"/>
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="#C2C9BE"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#D6DDD2"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#E8EDE4"/>
    
    <!-- Card and Container Colors -->
    <SolidColorBrush x:Key="CardBrush" Color="White"/>
    <SolidColorBrush x:Key="ContainerBrush" Color="#F5F9F2"/>
    
    <!-- Container Hover/Pressed States -->
    <SolidColorBrush x:Key="PrimaryContainerHoverBrush" Color="#B8DDB9"/>
    <SolidColorBrush x:Key="PrimaryContainerPressedBrush" Color="#A8D4A9"/>

</ResourceDictionary>