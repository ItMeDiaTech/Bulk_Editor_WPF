<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Legacy spacing and corner resources removed - now using MD3 system -->

    <!-- Font Resources -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>
    <system:Double x:Key="TitleFontSize">20</system:Double>
    <system:Double x:Key="HeadlineFontSize">24</system:Double>
    <system:Double x:Key="SubtitleFontSize">16</system:Double>
    <system:Double x:Key="BodyFontSize">14</system:Double>
    <system:Double x:Key="CaptionFontSize">12</system:Double>
    <FontWeight x:Key="TitleFontWeight">SemiBold</FontWeight>
    <FontWeight x:Key="HeadlineFontWeight">Bold</FontWeight>
    <FontWeight x:Key="SubtitleFontWeight">Medium</FontWeight>
    <FontWeight x:Key="BodyFontWeight">Normal</FontWeight>
    <FontWeight x:Key="CaptionFontWeight">Normal</FontWeight>

    <!-- Text Styles -->
    <Style x:Key="SectionHeaderStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource SubtitleFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource SubtitleFontWeight}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="SubtitleTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource SubtitleFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource SubtitleFontWeight}"/>
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource BodyFontWeight}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="CaptionTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource CaptionFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource CaptionFontWeight}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

</ResourceDictionary>