<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Custom Application Styles and Resources -->

    <!-- Basic Fallback Colors -->
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="SecondaryColor">#03DAC6</Color>
    <Color x:Key="BackgroundColor">#FAFAFA</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    <Color x:Key="TextPrimaryColor">#212121</Color>
    <Color x:Key="TextSecondaryColor">#757575</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="InfoColor">#2196F3</Color>

    <!-- Fallback Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="White"/>
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="Black"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#BDBDBD"/>

    <!-- MaterialDesign Color Zone Fallback Brushes -->
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="{StaticResource SecondaryColor}"/>

    <!-- Spacing Resources -->
    <Thickness x:Key="SmallSpacing">4</Thickness>
    <Thickness x:Key="MediumSpacing">8</Thickness>
    <Thickness x:Key="LargeSpacing">16</Thickness>
    <Thickness x:Key="ExtraLargeSpacing">24</Thickness>
    <Thickness x:Key="ContentPadding">16</Thickness>
    <Thickness x:Key="CardPadding">16</Thickness>
    <system:Double x:Key="SmallSpacingValue">4</system:Double>

    <!-- Spacing Patterns -->
    <Thickness x:Key="SmallSpacingBottom">0,0,0,4</Thickness>
    <Thickness x:Key="MediumSpacingBottom">0,0,0,8</Thickness>
    <Thickness x:Key="LargeSpacingBottom">0,0,0,16</Thickness>
    <Thickness x:Key="SmallSpacingTop">0,4,0,0</Thickness>
    <Thickness x:Key="MediumSpacingTop">0,8,0,0</Thickness>
    <Thickness x:Key="LargeSpacingTop">0,16,0,0</Thickness>
    <Thickness x:Key="SmallSpacingRight">0,0,4,0</Thickness>
    <Thickness x:Key="MediumSpacingRight">0,0,8,0</Thickness>

    <!-- Corner Radius -->
    <CornerRadius x:Key="CornerRadius">4</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="ButtonCornerRadius">4</CornerRadius>

    <!-- Font Resources -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="HeadlineFontFamily">Segoe UI</FontFamily>
    <system:Double x:Key="TitleFontSize">20</system:Double>
    <system:Double x:Key="HeadlineFontSize">24</system:Double>
    <system:Double x:Key="SubtitleFontSize">16</system:Double>
    <system:Double x:Key="BodyFontSize">14</system:Double>
    <system:Double x:Key="CaptionFontSize">12</system:Double>
    <FontWeight x:Key="TitleFontWeight">SemiBold</FontWeight>
    <FontWeight x:Key="HeadlineFontWeight">Bold</FontWeight>
    <FontWeight x:Key="SubtitleFontWeight">Medium</FontWeight>
    <FontWeight x:Key="BodyFontWeight">Normal</FontWeight>
    <FontWeight x:Key="CaptionFontWeight">Normal</FontWeight>

    <!-- Button Resources -->
    <Thickness x:Key="ButtonPadding">16,8</Thickness>

    <!-- Shadow Resources -->
    <system:Double x:Key="ShadowOpacity">0.1</system:Double>
    <system:Double x:Key="ShadowBlurRadius">6</system:Double>
    <system:Double x:Key="ShadowDepth">2</system:Double>
    <system:Boolean x:Key="EnableShadows">True</system:Boolean>

    <!-- Panel Container Style -->
    <Style x:Key="PanelContainerStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
        <Setter Property="Padding" Value="{DynamicResource ContentPadding}"/>
        <Setter Property="Margin" Value="{DynamicResource SmallSpacing}"/>
    </Style>

    <!-- Section Header Style -->
    <Style x:Key="SectionHeaderStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{DynamicResource TitleFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource TitleFontWeight}"/>
        <Setter Property="FontFamily" Value="{DynamicResource HeadlineFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Section Subheader Style -->
    <Style x:Key="SectionSubheaderStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{DynamicResource SubtitleFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource SubtitleFontWeight}"/>
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Body Text Style -->
    <Style x:Key="BodyTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource BodyFontWeight}"/>
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="1.5"/>
    </Style>

    <!-- Caption Text Style -->
    <Style x:Key="CaptionTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{DynamicResource CaptionFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource CaptionFontWeight}"/>
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <!-- Status Styles -->
    <Style x:Key="SuccessStatusStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="WarningStatusStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ErrorStatusStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="InfoStatusStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource InfoBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Fallback MaterialDesign Button Styles -->
    <Style x:Key="MaterialDesignRaisedButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="{DynamicResource ButtonPadding}"/>
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource BodyFontWeight}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="4" ShadowDepth="2"/>
                        </Border.Effect>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1976D2"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#1565C0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MaterialDesignOutlinedButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{DynamicResource ButtonPadding}"/>
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource BodyFontWeight}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#EEEEEE"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MaterialDesignFlatButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="{DynamicResource ButtonPadding}"/>
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource BodyFontWeight}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>