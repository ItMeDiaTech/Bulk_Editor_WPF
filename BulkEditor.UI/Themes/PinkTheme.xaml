<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Pink Theme -->
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#E91E63</Color>
    <Color x:Key="PrimaryDarkColor">#C2185B</Color>
    <Color x:Key="PrimaryLightColor">#F8BBD9</Color>
    <Color x:Key="AccentColor">#FF4081</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#FFF8FA</Color>
    <Color x:Key="SurfaceColor">#FCE4EC</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#880E4F</Color>
    <Color x:Key="TextSecondaryColor">#AD1457</Color>
    <Color x:Key="TextHintColor">#F48FB1</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderColor">#C2185B</Color>
    <Color x:Key="DividerColor">#F8BBD9</Color>
    <Color x:Key="FocusBorderColor">#E91E63</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="InfoColor">#2196F3</Color>
    
    <!-- Button Colors -->
    <Color x:Key="ButtonPrimaryColor">#E91E63</Color>
    <Color x:Key="ButtonPrimaryHoverColor">#D81B60</Color>
    <Color x:Key="ButtonSecondaryColor">#EC407A</Color>
    <Color x:Key="ButtonSecondaryHoverColor">#E91E63</Color>
    <Color x:Key="ButtonDangerColor">#F44336</Color>
    <Color x:Key="ButtonDangerHoverColor">#E53935</Color>
    <Color x:Key="ButtonProcessingOptionsColor">#9C27B0</Color>
    <Color x:Key="ButtonProcessingOptionsHoverColor">#8E24AA</Color>
    <Color x:Key="ButtonClearAllColor">#FF5722</Color>
    <Color x:Key="ButtonClearAllHoverColor">#E64A19</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextHintBrush" Color="{StaticResource TextHintColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource FocusBorderColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <!-- Material Design Paper Background -->
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="{StaticResource BackgroundColor}"/>
    
</ResourceDictionary>