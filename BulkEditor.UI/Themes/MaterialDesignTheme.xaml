<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Material Design Base Resources -->
    <ResourceDictionary.MergedDictionaries>
        <materialDesign:BundledTheme BaseTheme="Light" 
                                   PrimaryColor="Blue" 
                                   SecondaryColor="Teal" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Custom Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryVariantBrush" Color="{DynamicResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{DynamicResource PrimaryLight}"/>
    
    <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource Secondary}"/>
    <SolidColorBrush x:Key="SecondaryVariantBrush" Color="{DynamicResource SecondaryDark}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{DynamicResource SecondaryLight}"/>
    
    <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource MaterialDesignPaper}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource MaterialDesignBackground}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{DynamicResource MaterialDesignCardBackground}"/>
    <SolidColorBrush x:Key="DialogBrush" Color="{DynamicResource MaterialDesignPaper}"/>
    
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{DynamicResource PrimaryForeground}"/>
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="{DynamicResource SecondaryForeground}"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{DynamicResource MaterialDesignBody}"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{DynamicResource MaterialDesignBody}"/>
    
    <!-- State Colors -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
    
    <!-- Neutral Colors -->
    <SolidColorBrush x:Key="DisabledBrush" Color="{DynamicResource MaterialDesignCheckBoxDisabled}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource MaterialDesignDivider}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{DynamicResource MaterialDesignDivider}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{DynamicResource MaterialDesignFlatButtonClick}"/>

    <!-- Typography Resources -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="HeadlineFontFamily">Segoe UI</FontFamily>
    
    <system:Double x:Key="HeadlineFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">24</system:Double>
    <system:Double x:Key="TitleFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">20</system:Double>
    <system:Double x:Key="SubtitleFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>
    <system:Double x:Key="BodyFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">14</system:Double>
    <system:Double x:Key="CaptionFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">12</system:Double>
    
    <FontWeight x:Key="HeadlineFontWeight">SemiBold</FontWeight>
    <FontWeight x:Key="TitleFontWeight">Medium</FontWeight>
    <FontWeight x:Key="SubtitleFontWeight">Medium</FontWeight>
    <FontWeight x:Key="BodyFontWeight">Normal</FontWeight>
    <FontWeight x:Key="CaptionFontWeight">Normal</FontWeight>

    <!-- Layout Resources -->
    <system:Double x:Key="BaseSpacing" xmlns:system="clr-namespace:System;assembly=mscorlib">8</system:Double>
    <system:Double x:Key="SmallSpacing" xmlns:system="clr-namespace:System;assembly=mscorlib">4</system:Double>
    <system:Double x:Key="MediumSpacing" xmlns:system="clr-namespace:System;assembly=mscorlib">8</system:Double>
    <system:Double x:Key="LargeSpacing" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>
    <system:Double x:Key="ExtraLargeSpacing" xmlns:system="clr-namespace:System;assembly=mscorlib">24</system:Double>
    
    <CornerRadius x:Key="CornerRadius">6</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="ButtonCornerRadius">6</CornerRadius>
    
    <Thickness x:Key="ContentPadding">16</Thickness>
    <Thickness x:Key="CardPadding">24</Thickness>
    <Thickness x:Key="ButtonPadding">16,10</Thickness>

    <!-- Effects Resources -->
    <system:Boolean x:Key="EnableShadows" xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
    <system:Double x:Key="ShadowOpacity" xmlns:system="clr-namespace:System;assembly=mscorlib">0.1</system:Double>
    <system:Double x:Key="ShadowBlurRadius" xmlns:system="clr-namespace:System;assembly=mscorlib">8</system:Double>
    <system:Double x:Key="ShadowDepth" xmlns:system="clr-namespace:System;assembly=mscorlib">2</system:Double>
    
    <system:Boolean x:Key="EnableAnimations" xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
    <system:Double x:Key="AnimationSpeed" xmlns:system="clr-namespace:System;assembly=mscorlib">1.0</system:Double>
    <Duration x:Key="TransitionDuration">0:0:0.2</Duration>
    
    <system:Boolean x:Key="EnableRipple" xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
    <system:Double x:Key="RippleOpacity" xmlns:system="clr-namespace:System;assembly=mscorlib">0.1</system:Double>

</ResourceDictionary>