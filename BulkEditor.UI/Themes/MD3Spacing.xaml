<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    
    <!-- Material Design 3 Spacing System -->
    <!-- Based on 8dp baseline grid: https://m3.material.io/foundations/layout/understanding-layout/spacing -->
    
    <!-- Base Spacing Units (8dp increments) -->
    <sys:Double x:Key="BaseSpacing">8</sys:Double>
    
    <!-- Spacing Scale -->
    <sys:Double x:Key="ExtraSmallSpacingValue">4</sys:Double>   <!-- 0.5x -->
    <sys:Double x:Key="SmallSpacingValue">8</sys:Double>        <!-- 1x -->
    <sys:Double x:Key="MediumSpacingValue">16</sys:Double>      <!-- 2x -->
    <sys:Double x:Key="LargeSpacingValue">24</sys:Double>       <!-- 3x -->
    <sys:Double x:Key="ExtraLargeSpacingValue">32</sys:Double>  <!-- 4x -->
    <sys:Double x:Key="HugeSpacingValue">48</sys:Double>        <!-- 6x -->
    <sys:Double x:Key="GiantSpacingValue">64</sys:Double>       <!-- 8x -->
    
    <!-- Thickness Resources -->
    <Thickness x:Key="ExtraSmallSpacing">4</Thickness>
    <Thickness x:Key="SmallSpacing">8</Thickness>
    <Thickness x:Key="MediumSpacing">16</Thickness>
    <Thickness x:Key="LargeSpacing">24</Thickness>
    <Thickness x:Key="ExtraLargeSpacing">32</Thickness>
    <Thickness x:Key="HugeSpacing">48</Thickness>
    <Thickness x:Key="GiantSpacing">64</Thickness>
    
    <!-- Directional Spacing -->
    <Thickness x:Key="SmallHorizontalSpacing">8,0</Thickness>
    <Thickness x:Key="MediumHorizontalSpacing">16,0</Thickness>
    <Thickness x:Key="LargeHorizontalSpacing">24,0</Thickness>
    
    <Thickness x:Key="SmallVerticalSpacing">0,8</Thickness>
    <Thickness x:Key="MediumVerticalSpacing">0,16</Thickness>
    <Thickness x:Key="LargeVerticalSpacing">0,24</Thickness>
    
    <!-- Top Spacing -->
    <Thickness x:Key="SmallSpacingTop">0,8,0,0</Thickness>
    <Thickness x:Key="MediumSpacingTop">0,16,0,0</Thickness>
    <Thickness x:Key="LargeSpacingTop">0,24,0,0</Thickness>
    
    <!-- Bottom Spacing -->
    <Thickness x:Key="SmallSpacingBottom">0,0,0,8</Thickness>
    <Thickness x:Key="MediumSpacingBottom">0,0,0,16</Thickness>
    <Thickness x:Key="LargeSpacingBottom">0,0,0,24</Thickness>
    
    <!-- Left Spacing -->
    <Thickness x:Key="SmallSpacingLeft">8,0,0,0</Thickness>
    <Thickness x:Key="MediumSpacingLeft">16,0,0,0</Thickness>
    <Thickness x:Key="LargeSpacingLeft">24,0,0,0</Thickness>
    
    <!-- Right Spacing -->
    <Thickness x:Key="SmallSpacingRight">0,0,8,0</Thickness>
    <Thickness x:Key="MediumSpacingRight">0,0,16,0</Thickness>
    <Thickness x:Key="LargeSpacingRight">0,0,24,0</Thickness>
    
    <!-- Component-Specific Spacing -->
    <Thickness x:Key="ButtonPadding">24,10</Thickness>
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="ContentPadding">24</Thickness>
    <Thickness x:Key="SectionPadding">24,16</Thickness>
    <Thickness x:Key="ItemPadding">16,12</Thickness>
    
    <!-- Component Margins -->
    <Thickness x:Key="CardMargin">8</Thickness>
    <Thickness x:Key="SectionMargin">0,0,0,24</Thickness>
    <Thickness x:Key="ItemMargin">0,0,0,8</Thickness>
    <Thickness x:Key="SubItemMargin">0,0,0,4</Thickness>
    
    <!-- Border Thickness -->
    <Thickness x:Key="ThinBorder">1</Thickness>
    <Thickness x:Key="MediumBorder">2</Thickness>
    <Thickness x:Key="ThickBorder">3</Thickness>
    
    <!-- Corner Radius (Material Design 3) -->
    <CornerRadius x:Key="ExtraSmallCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="SmallCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">16</CornerRadius>
    <CornerRadius x:Key="ExtraLargeCornerRadius">28</CornerRadius>
    
    <!-- Component Corner Radius -->
    <CornerRadius x:Key="ButtonCornerRadius">20</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="FABCornerRadius">16</CornerRadius>
    
    <!-- Legacy Compatibility -->
    <CornerRadius x:Key="CornerRadius">12</CornerRadius>
    
    <!-- Elevation (Shadow Depth) -->
    <sys:Double x:Key="Elevation0">0</sys:Double>
    <sys:Double x:Key="Elevation1">1</sys:Double>
    <sys:Double x:Key="Elevation2">3</sys:Double>
    <sys:Double x:Key="Elevation3">6</sys:Double>
    <sys:Double x:Key="Elevation4">8</sys:Double>
    <sys:Double x:Key="Elevation5">12</sys:Double>
    
    <!-- Icon Sizes (8dp increments) -->
    <sys:Double x:Key="SmallIconSize">16</sys:Double>
    <sys:Double x:Key="MediumIconSize">24</sys:Double>
    <sys:Double x:Key="LargeIconSize">32</sys:Double>
    <sys:Double x:Key="ExtraLargeIconSize">48</sys:Double>
    
    <!-- Button Heights -->
    <sys:Double x:Key="SmallButtonHeight">32</sys:Double>
    <sys:Double x:Key="MediumButtonHeight">40</sys:Double>
    <sys:Double x:Key="LargeButtonHeight">48</sys:Double>
    
    <!-- Component Sizes -->
    <sys:Double x:Key="MinButtonWidth">88</sys:Double>
    <sys:Double x:Key="FABSize">56</sys:Double>
    <sys:Double x:Key="MiniFABSize">40</sys:Double>
    
    <!-- Card Dimensions -->
    <sys:Double x:Key="DocumentCardMinWidth">280</sys:Double>
    <sys:Double x:Key="DocumentCardHeight">160</sys:Double>
    <sys:Double x:Key="StatusCardMinHeight">72</sys:Double>
    
    <!-- Layout Breakpoints -->
    <sys:Double x:Key="MobileBreakpoint">600</sys:Double>
    <sys:Double x:Key="TabletBreakpoint">1240</sys:Double>
    <sys:Double x:Key="DesktopBreakpoint">1440</sys:Double>

</ResourceDictionary>