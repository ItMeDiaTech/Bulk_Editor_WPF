<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Dark Theme - Material Design 3 Dark Palette -->
    
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#BB86FC"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="#000000"/>
    <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#4A148C"/>
    <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="#E1BEE7"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#C79AFF"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#A372D9"/>
    
    <!-- Secondary Colors -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#03DAC6"/>
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="#000000"/>
    <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#004D40"/>
    <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="#B2DFDB"/>
    
    <!-- Surface Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#121212"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="#E4E4E4"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#E4E4E4"/>
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#CAC4CF"/>
    
    <!-- Semantic State Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#81C784"/>
    <SolidColorBrush x:Key="OnSuccessBrush" Color="#000000"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFB74D"/>
    <SolidColorBrush x:Key="OnWarningBrush" Color="#000000"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F28B82"/>
    <SolidColorBrush x:Key="OnErrorBrush" Color="#000000"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#82B1FF"/>
    <SolidColorBrush x:Key="OnInfoBrush" Color="#000000"/>
    
    <!-- Outline and Border Colors -->
    <SolidColorBrush x:Key="OutlineBrush" Color="#938F99"/>
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="#49454F"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#2E2E2E"/>
    
    <!-- Card and Container Colors -->
    <SolidColorBrush x:Key="CardBrush" Color="#252525"/>
    <SolidColorBrush x:Key="ContainerBrush" Color="#1A1A1A"/>
    
    <!-- Interactive State Colors -->
    <SolidColorBrush x:Key="HoverOverlayBrush" Color="#1AFFFFFF"/>
    <SolidColorBrush x:Key="PressedOverlayBrush" Color="#1FFFFFFF"/>
    <SolidColorBrush x:Key="FocusOverlayBrush" Color="#1ABB86FC"/>
    
    <!-- Container Hover/Pressed States -->
    <SolidColorBrush x:Key="PrimaryContainerHoverBrush" Color="#5A1F9C"/>
    <SolidColorBrush x:Key="PrimaryContainerPressedBrush" Color="#6A2FAC"/>

</ResourceDictionary>