<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Animation System for Enhanced User Experience -->

    <!-- Animation Durations -->
    <Duration x:Key="FastAnimationDuration">0:0:0.15</Duration>
    <Duration x:Key="MediumAnimationDuration">0:0:0.3</Duration>
    <Duration x:Key="SlowAnimationDuration">0:0:0.5</Duration>
    
    <!-- Easing Functions -->
    <CubicEase x:Key="StandardEaseInOut" EasingMode="EaseInOut"/>
    <CubicEase x:Key="StandardEaseOut" EasingMode="EaseOut"/>
    <CubicEase x:Key="StandardEaseIn" EasingMode="EaseIn"/>
    <BackEase x:Key="BackEaseOut" EasingMode="EaseOut" Amplitude="0.6"/>
    <BounceEase x:Key="BounceEaseOut" EasingMode="EaseOut" Bounces="2" Bounciness="2"/>

    <!-- Fade In Animation -->
    <Storyboard x:Key="FadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Fade Out Animation -->
    <Storyboard x:Key="FadeOutAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1" To="0"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseIn}"/>
    </Storyboard>

    <!-- Scale Up Animation -->
    <Storyboard x:Key="ScaleUpAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="0.8" To="1"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource BackEaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="0.8" To="1"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource BackEaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Scale Down Animation -->
    <Storyboard x:Key="ScaleDownAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="1" To="0.8"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseIn}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="1" To="0.8"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseIn}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1" To="0"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseIn}"/>
    </Storyboard>

    <!-- Slide In From Left Animation -->
    <Storyboard x:Key="SlideInFromLeftAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                        From="-100" To="0"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Slide In From Right Animation -->
    <Storyboard x:Key="SlideInFromRightAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                        From="100" To="0"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Slide Up Animation -->
    <Storyboard x:Key="SlideUpAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="30" To="0"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Hover Scale Animation -->
    <Storyboard x:Key="HoverScaleUpAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        To="1.05"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        To="1.05"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Hover Scale Back Animation -->
    <Storyboard x:Key="HoverScaleBackAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        To="1"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        To="1"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Progress Bar Animation -->
    <Storyboard x:Key="ProgressBarAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                        From="-100" To="400"
                        Duration="0:0:1.5"
                        EasingFunction="{StaticResource StandardEaseInOut}"/>
    </Storyboard>

    <!-- Pulse Animation -->
    <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1" To="0.6"
                        Duration="0:0:1"
                        EasingFunction="{StaticResource StandardEaseInOut}"/>
    </Storyboard>

    <!-- Rotation Animation -->
    <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                        From="0" To="360"
                        Duration="0:0:1"
                        EasingFunction="{StaticResource StandardEaseInOut}"/>
    </Storyboard>

    <!-- Card Hover Elevation Animation -->
    <Storyboard x:Key="CardHoverUpAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        To="-2"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Card Hover Back Animation -->
    <Storyboard x:Key="CardHoverBackAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        To="0"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Loading Dots Animation -->
    <Storyboard x:Key="LoadingDotsAnimation" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
            <LinearDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
            <LinearDoubleKeyFrame KeyTime="0:0:0.75" Value="0.3"/>
            <LinearDoubleKeyFrame KeyTime="0:0:1.5" Value="1"/>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <!-- Shake Animation for Errors -->
    <Storyboard x:Key="ShakeAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
            <LinearDoubleKeyFrame KeyTime="0:0:0.05" Value="-5"/>
            <LinearDoubleKeyFrame KeyTime="0:0:0.1" Value="5"/>
            <LinearDoubleKeyFrame KeyTime="0:0:0.15" Value="-5"/>
            <LinearDoubleKeyFrame KeyTime="0:0:0.2" Value="5"/>
            <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="0"/>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <!-- Success Checkmark Animation -->
    <Storyboard x:Key="SuccessAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="0" To="1"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource BounceEaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="0" To="1"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource BounceEaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

    <!-- Page Transition - Fade -->
    <Storyboard x:Key="PageTransitionFadeOut">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        To="0"
                        Duration="{StaticResource FastAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseIn}"/>
    </Storyboard>

    <Storyboard x:Key="PageTransitionFadeIn">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="{StaticResource MediumAnimationDuration}"
                        EasingFunction="{StaticResource StandardEaseOut}"/>
    </Storyboard>

</ResourceDictionary>