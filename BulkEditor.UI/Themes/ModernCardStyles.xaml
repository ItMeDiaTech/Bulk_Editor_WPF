<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Modern Card Style for materialDesign:Card -->
    <Style x:Key="ModernCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Content Card Style for Border elements -->
    <Style x:Key="ContentCardStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="6" ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="12" ShadowDepth="4"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Header Card Style -->
    <Style x:Key="HeaderCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource ModernCardStyle}">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Padding" Value="24,16"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
    </Style>

    <!-- List Item Card Style -->
    <Style x:Key="ListItemCardStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource MediumCornerRadius}"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="{StaticResource SubItemMargin}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Opacity="0.06" BlurRadius="4" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" Opacity="0.12" BlurRadius="8" ShadowDepth="2"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Background" Value="{DynamicResource SurfaceVariantBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Document Card Style -->
    <Style x:Key="DocumentCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="Width" Value="{StaticResource DocumentCardMinWidth}"/>
        <Setter Property="Height" Value="{StaticResource DocumentCardHeight}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                <Setter Property="Background" Value="{DynamicResource SurfaceVariantBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Dashboard Card Style -->
    <Style x:Key="DashboardCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="{StaticResource LargeSpacing}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Navigation Card Style -->
    <Style x:Key="NavigationCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="{StaticResource MediumSpacing}"/>
        <Setter Property="Margin" Value="{StaticResource SmallSpacing}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
                <Setter Property="Background" Value="{DynamicResource PrimaryContainerBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Status Card Style -->
    <Style x:Key="StatusCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="{StaticResource MediumSpacing}"/>
        <Setter Property="Margin" Value="{StaticResource SmallSpacing}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
        <Setter Property="MinHeight" Value="80"/>
    </Style>

    <!-- Settings Card Style -->
    <Style x:Key="SettingsCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="{StaticResource LargeSpacing}"/>
        <Setter Property="Margin" Value="{StaticResource MediumSpacing}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
    </Style>

</ResourceDictionary>