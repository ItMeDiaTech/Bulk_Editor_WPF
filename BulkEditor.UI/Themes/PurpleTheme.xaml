<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Purple Theme -->
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#9C27B0</Color>
    <Color x:Key="PrimaryDarkColor">#7B1FA2</Color>
    <Color x:Key="PrimaryLightColor">#E1BEE7</Color>
    <Color x:Key="AccentColor">#FF4081</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#FDF7FF</Color>
    <Color x:Key="SurfaceColor">#F3E5F5</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#4A148C</Color>
    <Color x:Key="TextSecondaryColor">#6A1B9A</Color>
    <Color x:Key="TextHintColor">#CE93D8</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderColor">#7B1FA2</Color>
    <Color x:Key="DividerColor">#E1BEE7</Color>
    <Color x:Key="FocusBorderColor">#9C27B0</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="InfoColor">#2196F3</Color>
    
    <!-- Button Colors -->
    <Color x:Key="ButtonPrimaryColor">#9C27B0</Color>
    <Color x:Key="ButtonPrimaryHoverColor">#8E24AA</Color>
    <Color x:Key="ButtonSecondaryColor">#AB47BC</Color>
    <Color x:Key="ButtonSecondaryHoverColor">#9C27B0</Color>
    <Color x:Key="ButtonDangerColor">#F44336</Color>
    <Color x:Key="ButtonDangerHoverColor">#E53935</Color>
    <Color x:Key="ButtonProcessingOptionsColor">#673AB7</Color>
    <Color x:Key="ButtonProcessingOptionsHoverColor">#5E35B1</Color>
    <Color x:Key="ButtonClearAllColor">#E91E63</Color>
    <Color x:Key="ButtonClearAllHoverColor">#D81B60</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextHintBrush" Color="{StaticResource TextHintColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource FocusBorderColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <!-- CRITICAL FIX: Add missing button brush resources -->
    <SolidColorBrush x:Key="ButtonPrimaryBrush" Color="{StaticResource ButtonPrimaryColor}"/>
    <SolidColorBrush x:Key="ButtonPrimaryHoverBrush" Color="{StaticResource ButtonPrimaryHoverColor}"/>
    <SolidColorBrush x:Key="ButtonSecondaryBrush" Color="{StaticResource ButtonSecondaryColor}"/>
    <SolidColorBrush x:Key="ButtonSecondaryHoverBrush" Color="{StaticResource ButtonSecondaryHoverColor}"/>
    <SolidColorBrush x:Key="ButtonDangerBrush" Color="{StaticResource ButtonDangerColor}"/>
    <SolidColorBrush x:Key="ButtonDangerHoverBrush" Color="{StaticResource ButtonDangerHoverColor}"/>
    <SolidColorBrush x:Key="ButtonProcessingOptionsBrush" Color="{StaticResource ButtonProcessingOptionsColor}"/>
    <SolidColorBrush x:Key="ButtonProcessingOptionsHoverBrush" Color="{StaticResource ButtonProcessingOptionsHoverColor}"/>
    <SolidColorBrush x:Key="ButtonClearAllBrush" Color="{StaticResource ButtonClearAllColor}"/>
    <SolidColorBrush x:Key="ButtonClearAllHoverBrush" Color="{StaticResource ButtonClearAllHoverColor}"/>
    
    <!-- Material Design Paper Background -->
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="{StaticResource BackgroundColor}"/>
    
</ResourceDictionary>