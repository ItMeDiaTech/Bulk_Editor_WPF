<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    
    <!-- Material Design 3 Motion System -->
    <!-- Based on MD3 motion guidelines: https://m3.material.io/styles/motion/overview -->
    
    <!-- Animation Durations -->
    <Duration x:Key="FastDuration">0:0:0.15</Duration>         <!-- 150ms - Micro-interactions -->
    <Duration x:Key="StandardDuration">0:0:0.3</Duration>      <!-- 300ms - Standard transitions -->
    <Duration x:Key="SlowDuration">0:0:0.4</Duration>          <!-- 400ms - Complex transitions -->
    <Duration x:Key="ExtraSlowDuration">0:0:0.5</Duration>     <!-- 500ms - Page transitions -->
    
    <!-- Easing Functions (Material Design 3) -->
    <KeySpline x:Key="StandardEasing">0.2,0 0,1</KeySpline>           <!-- Standard curve -->
    <KeySpline x:Key="DeceleratedEasing">0,0 0.2,1</KeySpline>        <!-- Decelerated curve -->
    <KeySpline x:Key="AcceleratedEasing">0.4,0 1,1</KeySpline>        <!-- Accelerated curve -->
    <KeySpline x:Key="LinearEasing">0,0 1,1</KeySpline>               <!-- Linear curve -->
    
    <!-- Hover Animation -->
    <Storyboard x:Key="HoverEnterAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         To="0.08"
                         Duration="{StaticResource FastDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <Storyboard x:Key="HoverExitAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         To="0"
                         Duration="{StaticResource StandardDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Press Animation -->
    <Storyboard x:Key="PressAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         To="0.12"
                         Duration="0:0:0.1">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Focus Animation -->
    <Storyboard x:Key="FocusAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         To="0.12"
                         Duration="{StaticResource StandardDuration}"
                         AutoReverse="True"
                         RepeatBehavior="Forever">
            <DoubleAnimation.EasingFunction>
                <SineEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Scale Animation for Buttons -->
    <Storyboard x:Key="ScaleUpAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                         To="1.05"
                         Duration="{StaticResource FastDuration}">
            <DoubleAnimation.EasingFunction>
                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                         To="1.05"
                         Duration="{StaticResource FastDuration}">
            <DoubleAnimation.EasingFunction>
                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <Storyboard x:Key="ScaleDownAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                         To="1.0"
                         Duration="{StaticResource StandardDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                         To="1.0"
                         Duration="{StaticResource StandardDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Card Elevation Animation -->
    <Storyboard x:Key="ElevateAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.ShadowDepth)"
                         To="8"
                         Duration="{StaticResource StandardDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.BlurRadius)"
                         To="16"
                         Duration="{StaticResource StandardDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <Storyboard x:Key="DeElevateAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.ShadowDepth)"
                         To="2"
                         Duration="{StaticResource SlowDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.BlurRadius)"
                         To="6"
                         Duration="{StaticResource SlowDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Fade Animations -->
    <Storyboard x:Key="FadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0"
                         To="1"
                         Duration="{StaticResource StandardDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <Storyboard x:Key="FadeOutAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1"
                         To="0"
                         Duration="{StaticResource StandardDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseIn"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Slide Animations -->
    <Storyboard x:Key="SlideInFromLeftAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.X)"
                         From="-300"
                         To="0"
                         Duration="{StaticResource SlowDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0"
                         To="1"
                         Duration="{StaticResource StandardDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <Storyboard x:Key="SlideInFromRightAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.X)"
                         From="300"
                         To="0"
                         Duration="{StaticResource SlowDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0"
                         To="1"
                         Duration="{StaticResource StandardDuration}">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Loading Animation -->
    <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(RotateTransform.Angle)"
                         From="0"
                         To="360"
                         Duration="0:0:2">
            <DoubleAnimation.EasingFunction>
                <QuadraticEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Pulse Animation for Loading States -->
    <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0.5"
                         To="1.0"
                         Duration="0:0:1"
                         AutoReverse="True">
            <DoubleAnimation.EasingFunction>
                <SineEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Shared Element Transition -->
    <Storyboard x:Key="SharedElementTransition">
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                         To="1.02"
                         Duration="{StaticResource ExtraSlowDuration}"
                         AutoReverse="True">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                         To="1.02"
                         Duration="{StaticResource ExtraSlowDuration}"
                         AutoReverse="True">
            <DoubleAnimation.EasingFunction>
                <CircleEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

</ResourceDictionary>