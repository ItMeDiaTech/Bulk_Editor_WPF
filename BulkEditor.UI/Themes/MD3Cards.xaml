<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <!-- Material Design 3 Card Components -->
    <!-- Based on MD3 components: https://m3.material.io/components/cards/overview -->
    
    <!-- MD3 Filled Card Style -->
    <Style x:Key="MD3FilledCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource SurfaceVariantBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- MD3 Elevated Card Style -->
    <Style x:Key="MD3ElevatedCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- MD3 Outlined Card Style -->
    <Style x:Key="MD3OutlinedCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
        <Setter Property="BorderBrush" Value="{DynamicResource OutlineBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource ThinBorder}"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
                <Setter Property="BorderBrush" Value="{DynamicResource OutlineVariantBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Modern Card Style (Default - Elevated) -->
    <Style x:Key="ModernCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3ElevatedCardStyle}"/>
    
    <!-- Header Card Style -->
    <Style x:Key="HeaderCardStyle" TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnPrimaryBrush}"/>
        <Setter Property="Padding" Value="{StaticResource SectionPadding}"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
    </Style>
    
    <!-- Dashboard Card Style -->
    <Style x:Key="DashboardCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3ElevatedCardStyle}">
        <Setter Property="Padding" Value="{StaticResource SectionPadding}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Document Card Style -->
    <Style x:Key="DocumentCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3ElevatedCardStyle}">
        <Setter Property="Width" Value="{StaticResource DocumentCardMinWidth}"/>
        <Setter Property="Height" Value="{StaticResource DocumentCardHeight}"/>
        <Setter Property="Margin" Value="{StaticResource ItemMargin}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                <Setter Property="Background" Value="{DynamicResource SurfaceVariantBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Navigation Card Style -->
    <Style x:Key="NavigationCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3FilledCardStyle}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="{StaticResource SubItemMargin}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource PrimaryContainerBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource OnPrimaryContainerBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Status Card Style -->
    <Style x:Key="StatusCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3ElevatedCardStyle}">
        <Setter Property="MinHeight" Value="{StaticResource StatusCardMinHeight}"/>
        <Setter Property="Margin" Value="{StaticResource ItemMargin}"/>
    </Style>
    
    <!-- Settings Card Style -->
    <Style x:Key="SettingsCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3OutlinedCardStyle}">
        <Setter Property="Padding" Value="{StaticResource SectionPadding}"/>
        <Setter Property="Margin" Value="{StaticResource MediumSpacing}"/>
    </Style>
    
    <!-- Compact Card Style -->
    <Style x:Key="CompactCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3FilledCardStyle}">
        <Setter Property="Padding" Value="{StaticResource ItemPadding}"/>
        <Setter Property="Margin" Value="{StaticResource SubItemMargin}"/>
    </Style>
    
    <!-- Interactive Card Style -->
    <Style x:Key="InteractiveCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3ElevatedCardStyle}">
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp6"/>
                <Setter Property="Background" Value="{DynamicResource PrimaryContainerBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource OnPrimaryContainerBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Alert Card Style -->
    <Style x:Key="AlertCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3OutlinedCardStyle}">
        <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}"/>
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource MediumBorder}"/>
    </Style>
    
    <!-- Error Card Style -->
    <Style x:Key="ErrorCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3OutlinedCardStyle}">
        <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}"/>
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource MediumBorder}"/>
    </Style>
    
    <!-- Success Card Style -->
    <Style x:Key="SuccessCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3OutlinedCardStyle}">
        <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource MediumBorder}"/>
    </Style>
    
    <!-- Document List Item Style - Detailed view with path under name -->
    <Style x:Key="DocumentListCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3ElevatedCardStyle}">
        <Setter Property="Height" Value="72"/>
        <Setter Property="MinWidth" Value="400"/>
        <Setter Property="Margin" Value="{StaticResource SubItemMargin}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                <Setter Property="Background" Value="{DynamicResource SurfaceVariantBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Document Compact Item Style - Ultra condensed view -->
    <Style x:Key="DocumentCompactCardStyle" TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource MD3ElevatedCardStyle}">
        <Setter Property="Height" Value="48"/>
        <Setter Property="MinWidth" Value="400"/>
        <Setter Property="Margin" Value="{StaticResource SubItemMargin}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                <Setter Property="Background" Value="{DynamicResource SurfaceVariantBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- List Item Card Style (using Border for non-MaterialDesign contexts) -->
    <Style x:Key="ListItemCardStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource MediumCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource ItemPadding}"/>
        <Setter Property="Margin" Value="{StaticResource SubItemMargin}"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Opacity="0.06" BlurRadius="4" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource SurfaceVariantBrush}"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" Opacity="0.12" BlurRadius="8" ShadowDepth="2"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>