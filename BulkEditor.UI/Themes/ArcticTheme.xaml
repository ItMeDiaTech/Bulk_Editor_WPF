<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Arctic Theme - Cool, Professional Blue-Gray Palette -->
    
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0F4C75"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="White"/>
    <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#D6E8F5"/>
    <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="#001E2E"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#0A3A5C"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#082842"/>
    
    <!-- Secondary Colors -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#3282B8"/>
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#E2F1FF"/>
    <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="#001C35"/>
    
    <!-- Surface Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F8FAFB"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="#191C1E"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#191C1E"/>
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#E7F1F7"/>
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#41484D"/>
    
    <!-- Semantic State Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#2E7D32"/>
    <SolidColorBrush x:Key="OnSuccessBrush" Color="White"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F57C00"/>
    <SolidColorBrush x:Key="OnWarningBrush" Color="White"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#C62828"/>
    <SolidColorBrush x:Key="OnErrorBrush" Color="White"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="OnInfoBrush" Color="White"/>
    
    <!-- Outline and Border Colors -->
    <SolidColorBrush x:Key="OutlineBrush" Color="#6F777D"/>
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="#BFC8CD"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D9DD"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#E4EAEE"/>
    
    <!-- Card and Container Colors -->
    <SolidColorBrush x:Key="CardBrush" Color="White"/>
    <SolidColorBrush x:Key="ContainerBrush" Color="#F1F5F9"/>
    
    <!-- Container Hover/Pressed States -->
    <SolidColorBrush x:Key="PrimaryContainerHoverBrush" Color="#C7DFEF"/>
    <SolidColorBrush x:Key="PrimaryContainerPressedBrush" Color="#B8D6E9"/>

</ResourceDictionary>