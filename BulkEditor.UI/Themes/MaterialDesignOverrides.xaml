<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Removed legacy spacing resources - now using MD3 spacing system -->

    <!-- Color Resources -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="#212121"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFF"/>

    <!-- Typography Resources -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="HeadlineFontFamily">Segoe UI</FontFamily>
    <FontWeight x:Key="BodyFontWeight">Normal</FontWeight>
    <FontWeight x:Key="SubtitleFontWeight">SemiBold</FontWeight>
    <FontWeight x:Key="HeadlineFontWeight">SemiBold</FontWeight>
    <FontWeight x:Key="TitleFontWeight">SemiBold</FontWeight>
    <FontWeight x:Key="CaptionFontWeight">Normal</FontWeight>
    <system:Double x:Key="BodyFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">14</system:Double>
    <system:Double x:Key="HeadlineFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">24</system:Double>
    <system:Double x:Key="SubtitleFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>
    <system:Double x:Key="CaptionFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">12</system:Double>
    <system:Double x:Key="TitleFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">20</system:Double>

    <!-- Additional Color Resources -->
    <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#212121"/>

    <!-- Material Design Missing Resources -->
    <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#8BC34A"/>
    <SolidColorBrush x:Key="SecondaryHueMidForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignBody" Color="#212121"/>

    <!-- Button Corner Radius -->
    <CornerRadius x:Key="ButtonCornerRadius">6</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="CornerRadius">4</CornerRadius>
    <Thickness x:Key="CardPadding">16</Thickness>
    <system:Double x:Key="ShadowOpacity" xmlns:system="clr-namespace:System;assembly=mscorlib">0.1</system:Double>
    <system:Double x:Key="ShadowBlurRadius" xmlns:system="clr-namespace:System;assembly=mscorlib">6</system:Double>
    <system:Double x:Key="ShadowDepth" xmlns:system="clr-namespace:System;assembly=mscorlib">2</system:Double>
    <system:Boolean x:Key="EnableShadows" xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>

    <!-- Text Styles -->
    <Style x:Key="SectionHeaderStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{DynamicResource HeadlineFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource HeadlineFontWeight}"/>
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource BodyFontWeight}"/>
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="CaptionTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{DynamicResource CaptionFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource CaptionFontWeight}"/>
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <Style x:Key="SubtitleTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{DynamicResource SubtitleFontSize}"/>
        <Setter Property="FontWeight" Value="{DynamicResource SubtitleFontWeight}"/>
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Card Style Override -->
    <Style x:Key="ModernCardStyleOverride" TargetType="{x:Type materialDesign:Card}" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="{DynamicResource CardPadding}"/>
        <Setter Property="Margin" Value="{DynamicResource MD3Spacing8}"/>
    </Style>

    <!-- Button Styles -->
    <Style x:Key="PrimaryActionButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="4" ShadowDepth="2"/>
                        </Border.Effect>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#43A047"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#388E3C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="WarningButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="4" ShadowDepth="2"/>
                        </Border.Effect>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F57C00"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#EF6C00"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DangerButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="4" ShadowDepth="2"/>
                        </Border.Effect>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E53935"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#D32F2F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Secondary Button Style -->
    <Style x:Key="SecondaryButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource InfoBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource InfoBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource InfoBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#1976D2"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Flat Button Style -->
    <Style x:Key="FlatButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource InfoBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>