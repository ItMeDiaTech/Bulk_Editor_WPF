<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Material Design 3 Button System -->
    <!-- Based on MD3 button specs: https://m3.material.io/components/buttons/overview -->

    <!-- MD3 Filled Button Style (Primary) -->
    <Style x:Key="MD3FilledButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="{StaticResource ButtonPadding}"/>
        <Setter Property="Height" Value="{StaticResource LargeButtonHeight}"/>
        <Setter Property="MinWidth" Value="{StaticResource MinButtonWidth}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource LabelLargeFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource LabelFontWeight}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="{StaticResource ButtonCornerRadius}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
        <Setter Property="materialDesign:RippleAssist.IsDisabled" Value="False"/>
        <Setter Property="materialDesign:RippleAssist.Feedback" Value="{DynamicResource OnPrimaryBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#6442d6" Opacity="0.92"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#6442d6" Opacity="0.88"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{DynamicResource OnSurfaceBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
                <Setter Property="Opacity" Value="0.12"/>
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

