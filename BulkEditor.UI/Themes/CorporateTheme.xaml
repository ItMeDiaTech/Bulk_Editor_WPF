<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Corporate Theme - Professional Navy Blue and Silver -->
    
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#1A365D"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="White"/>
    <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="#002040"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#0F2B47"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#0A2138"/>
    
    <!-- Secondary Colors -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#718096"/>
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#F7FAFC"/>
    <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="#1A202C"/>
    
    <!-- Surface Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FEFEFE"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="#1A202C"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#1A202C"/>
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#4A5568"/>
    
    <!-- Semantic State Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#2D3748"/>
    <SolidColorBrush x:Key="OnSuccessBrush" Color="White"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#D69E2E"/>
    <SolidColorBrush x:Key="OnWarningBrush" Color="White"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#E53E3E"/>
    <SolidColorBrush x:Key="OnErrorBrush" Color="White"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#3182CE"/>
    <SolidColorBrush x:Key="OnInfoBrush" Color="White"/>
    
    <!-- Outline and Border Colors -->
    <SolidColorBrush x:Key="OutlineBrush" Color="#A0AEC0"/>
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="#CBD5E0"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#F0F4F8"/>
    
    <!-- Card and Container Colors -->
    <SolidColorBrush x:Key="CardBrush" Color="White"/>
    <SolidColorBrush x:Key="ContainerBrush" Color="#F9FAFB"/>
    
    <!-- Container Hover/Pressed States -->
    <SolidColorBrush x:Key="PrimaryContainerHoverBrush" Color="#D4DDEA"/>
    <SolidColorBrush x:Key="PrimaryContainerPressedBrush" Color="#C6D2E4"/>

</ResourceDictionary>