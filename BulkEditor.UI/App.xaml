<!-- FIXED App.xaml - Missing MaterialDesign Styles Added -->
<Application x:Class="BulkEditor.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BulkEditor.UI"
             xmlns:converters="clr-namespace:BulkEditor.UI.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design 3 Theme - Official Implementation -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                           PrimaryColor="DeepPurple" 
                                           SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                
                <!-- Custom Extensions (After Material Design) -->
                <ResourceDictionary Source="Themes/ModernSpacing.xaml" />
                <ResourceDictionary Source="Themes/ModernTypography.xaml" />
                <ResourceDictionary Source="Themes/ModernAnimations.xaml" />
                <ResourceDictionary Source="Themes/ModernCardStyles.xaml" />
                <ResourceDictionary Source="Themes/ModernButtonStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

            <!-- Modern Color System - Material Design 3 Inspired -->
            
            <!-- Primary Colors -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#673AB7"/>
            <SolidColorBrush x:Key="OnPrimaryBrush" Color="White"/>
            <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#E8DDF7"/>
            <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="#21005E"/>
            <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#5E35B1"/>
            <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#512DA8"/>
            
            <!-- Secondary Colors -->
            <SolidColorBrush x:Key="SecondaryBrush" Color="#CDDC39"/>
            <SolidColorBrush x:Key="OnSecondaryBrush" Color="#1A1C00"/>
            <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#E7F4C1"/>
            <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="#161D00"/>
            
            <!-- Surface Colors -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#FEFBFF"/>
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="#1C1B1F"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="#1C1B1F"/>
            <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#F4EFF4"/>
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#49454F"/>
            
            <!-- Semantic State Colors -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
            <SolidColorBrush x:Key="OnSuccessBrush" Color="White"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
            <SolidColorBrush x:Key="OnWarningBrush" Color="White"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
            <SolidColorBrush x:Key="OnErrorBrush" Color="White"/>
            <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
            <SolidColorBrush x:Key="OnInfoBrush" Color="White"/>
            
            <!-- Outline and Border Colors -->
            <SolidColorBrush x:Key="OutlineBrush" Color="#79747E"/>
            <SolidColorBrush x:Key="OutlineVariantBrush" Color="#CAC4D0"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
            <SolidColorBrush x:Key="DividerBrush" Color="#E8E8E8"/>
            
            <!-- Card and Container Colors -->
            <SolidColorBrush x:Key="CardBrush" Color="White"/>
            <SolidColorBrush x:Key="ContainerBrush" Color="#F8F9FA"/>
            
            <!-- Interactive State Colors -->
            <SolidColorBrush x:Key="HoverOverlayBrush" Color="#1A000000"/>
            <SolidColorBrush x:Key="PressedOverlayBrush" Color="#1F000000"/>
            <SolidColorBrush x:Key="FocusOverlayBrush" Color="#1A6200EA"/>
            
            <!-- Container Hover/Pressed States -->
            <SolidColorBrush x:Key="PrimaryContainerHoverBrush" Color="#DDD0F0"/>
            <SolidColorBrush x:Key="PrimaryContainerPressedBrush" Color="#D2C2E9"/>
            
            <!-- Legacy Compatibility -->
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#512DA8"/>
            <SolidColorBrush x:Key="PrimaryLightBrush" Color="#9575CD"/>

            <!-- Missing MaterialDesign Compatibility Resources -->
            <SolidColorBrush x:Key="MaterialDesignPaper" Color="White"/>
            <SolidColorBrush x:Key="MaterialDesignBody" Color="#212121"/>
            <SolidColorBrush x:Key="MaterialDesignBackground" Color="#FAFAFA"/>

            <!-- MaterialDesign Color Compatibility -->
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#673AB7"/>
            <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="White"/>
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#512DA8"/>
            <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="White"/>
            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#9575CD"/>
            <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="White"/>

            <!-- MaterialDesign Secondary Colors -->
            <SolidColorBrush x:Key="SecondaryHueMidForegroundBrush" Color="Black"/>
            <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="#AFB42B"/>
            <SolidColorBrush x:Key="SecondaryHueDarkForegroundBrush" Color="Black"/>
            <SolidColorBrush x:Key="SecondaryHueLightBrush" Color="#F0F4C3"/>
            <SolidColorBrush x:Key="SecondaryHueLightForegroundBrush" Color="Black"/>

            <!-- Essential Window/Control Brushes -->
            <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="White"/>
            <SolidColorBrush x:Key="MaterialDesignToolBarBackground" Color="#673AB7"/>
            <SolidColorBrush x:Key="MaterialDesignSelection" Color="#673AB7"/>
            <SolidColorBrush x:Key="MaterialDesignDivider" Color="#E0E0E0"/>
            <SolidColorBrush x:Key="MaterialDesignCheckBoxOff" Color="#757575"/>
            <SolidColorBrush x:Key="MaterialDesignCheckBoxDisabled" Color="#BDBDBD"/>
            <SolidColorBrush x:Key="MaterialDesignTextFieldBoxBackground" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="MaterialDesignTextFieldBoxHoverBackground" Color="#EEEEEE"/>
            <SolidColorBrush x:Key="MaterialDesignTextFieldBoxDisabledBackground" Color="#FAFAFA"/>

            <!-- Dimension Resources -->
            <Thickness x:Key="ButtonPadding">16,8</Thickness>
            <Thickness x:Key="CardPadding">16</Thickness>
            <Thickness x:Key="ContentPadding">16</Thickness>
            <Thickness x:Key="SmallSpacing">4</Thickness>
            <Thickness x:Key="MediumSpacing">8</Thickness>
            <Thickness x:Key="LargeSpacing">16</Thickness>
            <Thickness x:Key="ExtraLargeSpacing">24</Thickness>
            <Thickness x:Key="MediumSpacingTop">0,8,0,0</Thickness>
            <Thickness x:Key="MediumSpacingBottom">0,0,0,8</Thickness>
            <Thickness x:Key="LargeSpacingBottom">0,0,0,16</Thickness>
            <Thickness x:Key="SmallSpacingBottom">0,0,0,4</Thickness>
            <Thickness x:Key="SmallSpacingRight">0,0,4,0</Thickness>
            <Thickness x:Key="MediumSpacingRight">0,0,8,0</Thickness>

            <!-- Corner Radius Resources -->
            <CornerRadius x:Key="ButtonCornerRadius">4</CornerRadius>
            <CornerRadius x:Key="CardCornerRadius">4</CornerRadius>
            <CornerRadius x:Key="CornerRadius">4</CornerRadius>

            <!-- Dimension Values (for GridSplitter, etc.) -->
            <sys:Double x:Key="SmallSpacingValue">4</sys:Double>
            <sys:Double x:Key="MediumSpacingValue">8</sys:Double>
            <sys:Double x:Key="LargeSpacingValue">16</sys:Double>

            <!-- Font Resources -->
            <sys:Double x:Key="BodyFontSize">14</sys:Double>
            <sys:Double x:Key="HeadlineFontSize">20</sys:Double>
            <sys:Double x:Key="TitleFontSize">18</sys:Double>
            <sys:Double x:Key="SubtitleFontSize">16</sys:Double>
            <sys:Double x:Key="CaptionFontSize">12</sys:Double>
            <FontWeight x:Key="BodyFontWeight">Normal</FontWeight>
            <FontWeight x:Key="HeadlineFontWeight">SemiBold</FontWeight>
            <FontWeight x:Key="TitleFontWeight">Medium</FontWeight>
            <FontWeight x:Key="SubtitleFontWeight">Medium</FontWeight>
            <FontWeight x:Key="CaptionFontWeight">Normal</FontWeight>
            <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>

            <!-- MISSING MATERIALDESIGN STYLES - FALLBACKS -->

            <!-- MaterialDesign LinearProgressBar Fallback -->
            <Style x:Key="MaterialDesignLinearProgressBar" TargetType="{x:Type ProgressBar}">
                <Setter Property="Background" Value="#E0E0E0"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Height" Value="4"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="2"
                                    ClipToBounds="True">
                                <Grid>
                                    <Rectangle Name="PART_Track" Fill="{TemplateBinding Background}"/>
                                    <Rectangle Name="PART_Indicator"
                                             Fill="{TemplateBinding Foreground}"
                                             HorizontalAlignment="Left"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- MaterialDesign CircularProgressBar Fallback -->
            <Style x:Key="MaterialDesignCircularProgressBar" TargetType="{x:Type ProgressBar}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Width" Value="24"/>
                <Setter Property="Height" Value="24"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid>
                                <!-- Simple circular progress representation -->
                                <Ellipse Stroke="#E0E0E0" StrokeThickness="2" Fill="Transparent"/>
                                <Ellipse Stroke="{TemplateBinding Foreground}" StrokeThickness="2" Fill="Transparent"
                                        StrokeDashArray="12,4">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform x:Name="ProgressRotation"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="ProgressRotation"
                                                                   Storyboard.TargetProperty="Angle"
                                                                   From="0" To="360" Duration="0:0:1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- MaterialDesign TextBlock Styles -->
            <Style x:Key="MaterialDesignHeadline1TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="FontWeight" Value="Light"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignHeadline2TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="Light"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignHeadline3TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignHeadline4TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignHeadline5TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignHeadline6TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignSubtitle1TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignSubtitle2TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignBody1TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignBody2TextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <Style x:Key="MaterialDesignCaptionTextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                <Setter Property="Opacity" Value="0.6"/>
            </Style>

            <Style x:Key="MaterialDesignOverlineTextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            </Style>

            <!-- Base Button Style -->
            <Style x:Key="ModernButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource OnPrimaryBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="{DynamicResource ButtonPadding}"/>
                <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}"/>
                <Setter Property="FontWeight" Value="{DynamicResource BodyFontWeight}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="{DynamicResource SmallSpacing}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="{DynamicResource ButtonCornerRadius}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="4" ShadowDepth="2"/>
                                </Border.Effect>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryDarkBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryDarkBrush}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ALL MISSING BUTTON STYLES -->
            <Style x:Key="PrimaryActionButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
                <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="24,12"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <Style x:Key="WarningButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
                <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style x:Key="DangerButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
                <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style x:Key="SuccessButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
                <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="{DynamicResource ButtonPadding}"/>
                <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}"/>
                <Setter Property="FontWeight" Value="{DynamicResource BodyFontWeight}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="{DynamicResource SmallSpacing}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{DynamicResource ButtonCornerRadius}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#EEEEEE"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- MaterialDesign Compatibility Styles -->
            <Style x:Key="MaterialDesignRaisedButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}"/>
            <Style x:Key="MaterialDesignOutlinedButton" TargetType="{x:Type Button}" BasedOn="{StaticResource SecondaryButtonStyle}"/>
            <Style x:Key="MaterialDesignFlatButton" TargetType="{x:Type Button}" BasedOn="{StaticResource SecondaryButtonStyle}">
                <Setter Property="BorderThickness" Value="0"/>
            </Style>

            <!-- MaterialDesign Expander Style (Fallback) -->
            <Style x:Key="MaterialDesignExpander" TargetType="{x:Type Expander}">
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}"/>
                <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Margin" Value="{DynamicResource SmallSpacing}"/>
                <Setter Property="Padding" Value="{DynamicResource SmallSpacing}"/>
            </Style>

            <!-- Text Styles -->
            <Style x:Key="SectionHeaderStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="{DynamicResource HeadlineFontSize}"/>
                <Setter Property="FontWeight" Value="{DynamicResource HeadlineFontWeight}"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <Style x:Key="CaptionTextStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="{DynamicResource CaptionFontSize}"/>
                <Setter Property="FontWeight" Value="{DynamicResource CaptionFontWeight}"/>
                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
                <Setter Property="Opacity" Value="0.7"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>