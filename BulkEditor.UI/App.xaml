<Application x:Class="BulkEditor.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BulkEditor.UI"
             xmlns:converters="clr-namespace:BulkEditor.UI.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- Material Design Theme Resources -->
                <ResourceDictionary Source="Themes/MaterialDesignTheme.xaml"/>
                
                <!-- Modern Style Resources -->
                <ResourceDictionary Source="Themes/ModernButtonStyles.xaml"/>
                <ResourceDictionary Source="Themes/ModernCardStyles.xaml"/>
                
                <!-- Legacy Theme Support (Keep for backward compatibility) -->
                <ResourceDictionary Source="Themes/LightTheme.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <!-- Inverse Boolean Converter -->
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            
            <!-- String to Bool Converter -->
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
