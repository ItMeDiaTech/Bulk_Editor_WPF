<Application x:Class="BulkEditor.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BulkEditor.UI"
             xmlns:converters="clr-namespace:BulkEditor.UI.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design 3 Official Configuration -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                           PrimaryColor="DeepPurple" 
                                           SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                
                <!-- Custom MD3 Extensions -->
                <ResourceDictionary Source="Themes/MD3Typography.xaml" />
                <ResourceDictionary Source="Themes/MD3Spacing.xaml" />
                <ResourceDictionary Source="Themes/MD3Animations.xaml" />
                <ResourceDictionary Source="Themes/MD3Cards.xaml" />
                
                <!-- MD3 Component Extensions -->
                <ResourceDictionary Source="Themes/MD3Buttons.xaml" />
                <ResourceDictionary Source="Themes/MD3InputControls.xaml" />
                <ResourceDictionary Source="Themes/MD3Navigation.xaml" />
                <ResourceDictionary Source="Themes/MD3Layout.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

            <!-- Material Design 3 Semantic Color System -->
            <!-- Primary Colors (MD3 Compliant) -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#6442d6"/>
            <SolidColorBrush x:Key="OnPrimaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#E8DDF7"/>
            <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="#21005E"/>
            
            <!-- Secondary Colors -->
            <SolidColorBrush x:Key="SecondaryBrush" Color="#625B71"/>
            <SolidColorBrush x:Key="OnSecondaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#E8DEF8"/>
            <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="#1E192B"/>
            
            <!-- Tertiary Colors -->
            <SolidColorBrush x:Key="TertiaryBrush" Color="#7D5260"/>
            <SolidColorBrush x:Key="OnTertiaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TertiaryContainerBrush" Color="#FFD8E4"/>
            <SolidColorBrush x:Key="OnTertiaryContainerBrush" Color="#31111D"/>
            
            <!-- Surface Colors (MD3 Spec) -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#FEFBFF"/>
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="#1C1B1F"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="#FEFBFF"/>
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="#1C1B1F"/>
            <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#F4EFF4"/>
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#49454F"/>
            
            <!-- Outline Colors -->
            <SolidColorBrush x:Key="OutlineBrush" Color="#79747E"/>
            <SolidColorBrush x:Key="OutlineVariantBrush" Color="#CAC4D0"/>
            
            <!-- Semantic State Colors (WCAG AA Compliant) -->
            <SolidColorBrush x:Key="ErrorBrush" Color="#BA1A1A"/>
            <SolidColorBrush x:Key="OnErrorBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ErrorContainerBrush" Color="#FFDAD6"/>
            <SolidColorBrush x:Key="OnErrorContainerBrush" Color="#410002"/>
            
            <!-- Success Colors -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#006E1C"/>
            <SolidColorBrush x:Key="OnSuccessBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SuccessContainerBrush" Color="#A6F584"/>
            <SolidColorBrush x:Key="OnSuccessContainerBrush" Color="#002204"/>
            
            <!-- Warning Colors -->
            <SolidColorBrush x:Key="WarningBrush" Color="#9A6700"/>
            <SolidColorBrush x:Key="OnWarningBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="WarningContainerBrush" Color="#FFDDB3"/>
            <SolidColorBrush x:Key="OnWarningContainerBrush" Color="#321300"/>
            
            <!-- Info Colors -->
            <SolidColorBrush x:Key="InfoBrush" Color="#0061A4"/>
            <SolidColorBrush x:Key="OnInfoBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="InfoContainerBrush" Color="#D1E4FF"/>
            <SolidColorBrush x:Key="OnInfoContainerBrush" Color="#001D36"/>
            
            <!-- Interactive State Colors -->
            <SolidColorBrush x:Key="HoverOverlayBrush" Color="#0C000000"/>
            <SolidColorBrush x:Key="PressedOverlayBrush" Color="#1A000000"/>
            <SolidColorBrush x:Key="FocusOverlayBrush" Color="#1A6442D6"/>
            
            <!-- Container and Surface Colors -->
            <SolidColorBrush x:Key="CardBrush" Color="#FEFBFF"/>
            <SolidColorBrush x:Key="ContainerBrush" Color="#F4EFF4"/>
            <SolidColorBrush x:Key="DividerBrush" Color="#CAC4D0"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#79747E"/>
            
            <!-- Legacy Compatibility Colors -->
            <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#5735C2"/>
            <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#4929AD"/>
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#512DA8"/>
            <SolidColorBrush x:Key="PrimaryLightBrush" Color="#9575CD"/>
            
            <!-- MaterialDesign Compatibility Resources -->
            <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FEFBFF"/>
            <SolidColorBrush x:Key="MaterialDesignBackground" Color="#FEFBFF"/>
            <SolidColorBrush x:Key="MaterialDesignBody" Color="#1C1B1F"/>
            <SolidColorBrush x:Key="MaterialDesignSelection" Color="#6442d6"/>
            <SolidColorBrush x:Key="MaterialDesignToolBarBackground" Color="#6442d6"/>
            <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="#FEFBFF"/>
            <SolidColorBrush x:Key="MaterialDesignDivider" Color="#CAC4D0"/>
            
            <!-- Required MaterialDesign Hue Brushes -->
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#6442d6"/>
            <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#4929AD"/>
            <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#8770E1"/>
            <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#FFFFFF"/>
            
            <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#625B71"/>
            <SolidColorBrush x:Key="SecondaryHueMidForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="#4A4458"/>
            <SolidColorBrush x:Key="SecondaryHueDarkForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SecondaryHueLightBrush" Color="#E8DEF8"/>
            <SolidColorBrush x:Key="SecondaryHueLightForegroundBrush" Color="#1E192B"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>