<Window x:Class="BulkEditor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:BulkEditor.UI.Controls"
        xmlns:local="clr-namespace:BulkEditor.UI.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="800" Width="1400"
        MinHeight="700" MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        materialDesign:ElevationAssist.Elevation="Dp4">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    </Window.Resources>

    <!-- Modern Card-Based Layout with Professional Design -->
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header with Gradient -->
        <materialDesign:Card Grid.Row="0" 
                           Style="{StaticResource HeaderCardStyle}"
                           materialDesign:ElevationAssist.Elevation="Dp4"
                           Margin="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Bulk Document Editor" 
                             Style="{StaticResource HeadlineMediumTextStyle}"
                             Foreground="{DynamicResource OnPrimaryBrush}" 
                             HorizontalAlignment="Left"/>
                    <TextBlock Text="Enterprise document processing with advanced hyperlink management" 
                             Style="{StaticResource BodyLargeTextStyle}"
                             Foreground="{DynamicResource OnPrimaryBrush}" 
                             HorizontalAlignment="Left" 
                             Opacity="0.9" 
                             Margin="{StaticResource SmallVerticalSpacing}"/>
                </StackPanel>
                
                <!-- Quick Actions Toolbar -->
                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal" 
                          VerticalAlignment="Center"
                          Margin="{StaticResource MediumHorizontalSpacing}">
                    <Button Style="{StaticResource IconButtonStyle}"
                            Command="{Binding OpenSettingsCommand}"
                            ToolTip="Application Settings"
                            Foreground="{DynamicResource OnPrimaryBrush}"
                            Margin="{StaticResource SmallHorizontalSpacing}">
                        <materialDesign:PackIcon Kind="Settings" Width="{StaticResource MediumIconSize}" Height="{StaticResource MediumIconSize}"/>
                    </Button>
                    <Button Style="{StaticResource IconButtonStyle}"
                            Command="{Binding ShowHelpCommand}"
                            ToolTip="Help and Documentation"
                            Foreground="{DynamicResource OnPrimaryBrush}"
                            Margin="{StaticResource SmallHorizontalSpacing}">
                        <materialDesign:PackIcon Kind="Help" Width="{StaticResource MediumIconSize}" Height="{StaticResource MediumIconSize}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Main Dashboard Layout -->
        <Grid Grid.Row="1" Margin="{StaticResource LargeSpacing}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" MinWidth="240"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="320" MinWidth="280"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation & Quick Actions Panel -->
            <materialDesign:Card Grid.Column="0" 
                               Style="{StaticResource DashboardCardStyle}"
                               Margin="0,0,8,0">
                <StackPanel>
                    <!-- Section Header -->
                    <TextBlock Text="Quick Actions" 
                             Style="{StaticResource TitleLargeTextStyle}"
                             Margin="{StaticResource SectionMargin}"/>
                    
                    <!-- Primary Actions -->
                    <StackPanel Margin="{StaticResource MediumVerticalSpacing}">
                        <Button Content="SELECT FILES" 
                                Command="{Binding SelectFilesCommand}" 
                                Style="{StaticResource SuccessButtonStyle}"
                                Margin="{StaticResource ItemMargin}"
                                Width="220"
                                HorizontalAlignment="Left">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Button.RenderTransform>
                        </Button>
                        
                        <Button Content="PROCESS DOCUMENTS" 
                                Command="{Binding ProcessDocumentsCommand}" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="{StaticResource ItemMargin}"
                                Width="220"
                                HorizontalAlignment="Left">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Button.RenderTransform>
                        </Button>
                        
                        <Button Content="CLEAR ALL" 
                                Command="{Binding ClearDocumentsCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="{StaticResource ItemMargin}"
                                Width="220"
                                HorizontalAlignment="Left">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Button.RenderTransform>
                        </Button>
                    </StackPanel>
                    
                    <!-- Separator -->
                    <Border Height="1" 
                          Background="{DynamicResource DividerBrush}" 
                          Margin="{StaticResource MediumVerticalSpacing}"/>
                    
                    <!-- Secondary Actions -->
                    <TextBlock Text="Tools" 
                             Style="{StaticResource TitleMediumTextStyle}"
                             Margin="{StaticResource MediumVerticalSpacing}"/>
                    
                    <StackPanel>
                        <Button Content="Processing Options" 
                                Command="{Binding OpenProcessingOptionsCommand}" 
                                Style="{StaticResource TextButtonStyle}"
                                HorizontalAlignment="Left"
                                Margin="{StaticResource SubItemMargin}"/>
                        
                        <Button Content="View Logs" 
                                Command="{Binding OpenLogsCommand}" 
                                Style="{StaticResource TextButtonStyle}"
                                HorizontalAlignment="Left"
                                Margin="{StaticResource SubItemMargin}"/>
                        
                        <Button Content="Session History" 
                                Command="{Binding OpenSessionHistoryCommand}" 
                                Style="{StaticResource TextButtonStyle}"
                                HorizontalAlignment="Left"
                                Margin="{StaticResource SubItemMargin}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Document Workspace -->
            <materialDesign:Card Grid.Column="1" 
                               Style="{StaticResource DashboardCardStyle}"
                               Margin="8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Workspace Header -->
                    <Grid Grid.Row="0" Margin="{StaticResource SectionMargin}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                 Text="Document Workspace" 
                                 Style="{StaticResource TitleLargeTextStyle}"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Style="{StaticResource IconButtonStyle}"
                                    Command="{Binding RefreshDocumentsCommand}"
                                    ToolTip="Refresh Document List"
                                    Margin="{StaticResource SmallHorizontalSpacing}">
                                <materialDesign:PackIcon Kind="Refresh" Width="{StaticResource SmallIconSize}" Height="{StaticResource SmallIconSize}"/>
                            </Button>
                            <Button Style="{StaticResource IconButtonStyle}"
                                    Command="{Binding ToggleViewModeCommand}"
                                    ToolTip="Toggle View Mode"
                                    Margin="{StaticResource SmallHorizontalSpacing}">
                                <materialDesign:PackIcon Kind="ViewList" Width="{StaticResource SmallIconSize}" Height="{StaticResource SmallIconSize}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Document List or Placeholder -->
                    <Grid Grid.Row="1">
                        <!-- Empty State -->
                        <StackPanel HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Visibility="{Binding HasDocuments, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <materialDesign:PackIcon Kind="FileMultiple" 
                                                   Width="64" Height="64"
                                                   Foreground="{DynamicResource OutlineVariantBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="{StaticResource LargeVerticalSpacing}"/>
                            <TextBlock Text="No documents loaded" 
                                     Style="{StaticResource TitleMediumTextStyle}"
                                     HorizontalAlignment="Center"
                                     Foreground="{DynamicResource OnSurfaceVariantBrush}"
                                     Margin="{StaticResource MediumVerticalSpacing}"/>
                            <TextBlock Text="Drag and drop Word documents here or use the Select Files button to get started" 
                                     Style="{StaticResource BodyMediumTextStyle}"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     Foreground="{DynamicResource OnSurfaceVariantBrush}"
                                     TextWrapping="Wrap"
                                     MaxWidth="300"/>
                        </StackPanel>
                        
                        <!-- Document List View -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Disabled"
                                    Visibility="{Binding HasDocuments, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl ItemsSource="{Binding Documents}"
                                        Margin="{StaticResource MediumSpacing}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Card Style="{StaticResource DocumentCardStyle}"
                                                           Margin="{StaticResource SubItemMargin}">
                                            <materialDesign:Card.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </materialDesign:Card.RenderTransform>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <materialDesign:PackIcon Grid.Column="0" 
                                                                       Kind="FileDocument" 
                                                                       Width="{StaticResource LargeIconSize}" Height="{StaticResource LargeIconSize}"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource PrimaryBrush}"
                                                                       Margin="{StaticResource MediumHorizontalSpacing}"/>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding FileName}" 
                                                             Style="{StaticResource TitleSmallTextStyle}"
                                                             TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding FilePath}" 
                                                             Style="{StaticResource BodySmallTextStyle}"
                                                             TextTrimming="CharacterEllipsis"
                                                             Margin="{StaticResource SmallVerticalSpacing}"/>
                                                    <TextBlock Text="{Binding Status}" 
                                                             Style="{StaticResource LabelSmallTextStyle}"
                                                             Foreground="{DynamicResource PrimaryBrush}"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="2"
                                                      Style="{StaticResource IconButtonStyle}"
                                                      Command="{Binding DataContext.RemoveDocumentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"
                                                      ToolTip="Remove Document">
                                                    <materialDesign:PackIcon Kind="Close" Width="{StaticResource SmallIconSize}" Height="{StaticResource SmallIconSize}"/>
                                                </Button>
                                            </Grid>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- Status & Analytics Panel -->
            <materialDesign:Card Grid.Column="2" 
                               Style="{StaticResource DashboardCardStyle}"
                               Margin="8,0,0,0">
                <StackPanel>
                    <!-- Status Header -->
                    <TextBlock Text="Status and Analytics" 
                             Style="{StaticResource TitleLargeTextStyle}"
                             Margin="{StaticResource SectionMargin}"/>
                    
                    <!-- Quick Stats -->
                    <Grid Margin="{StaticResource MediumVerticalSpacing}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Document Count -->
                        <materialDesign:Card Grid.Row="0" Style="{StaticResource StatusCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0" 
                                                       Kind="FileMultiple" 
                                                       Width="{StaticResource LargeIconSize}" Height="{StaticResource LargeIconSize}"
                                                       Foreground="{DynamicResource PrimaryBrush}"
                                                       VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Column="1" 
                                          VerticalAlignment="Center" 
                                          Margin="{StaticResource MediumHorizontalSpacing}">
                                    <TextBlock Text="{Binding TotalDocuments, StringFormat='{}{0}'}" 
                                             Style="{StaticResource HeadlineSmallTextStyle}"
                                             Foreground="{DynamicResource PrimaryBrush}"/>
                                    <TextBlock Text="Documents Loaded" 
                                             Style="{StaticResource BodySmallTextStyle}"/>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                        
                        <!-- Processing Progress -->
                        <materialDesign:Card Grid.Row="1" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                             Text="Processing Progress" 
                                             Style="{StaticResource BodyMediumTextStyle}"/>
                                    
                                    <TextBlock Grid.Column="1" 
                                             Text="{Binding ProcessingProgress, StringFormat='{}{0:P0}'}" 
                                             Style="{StaticResource LabelMediumTextStyle}"
                                             Foreground="{DynamicResource PrimaryBrush}"/>
                                </Grid>
                                
                                <ProgressBar Value="{Binding ProcessingProgress}" 
                                           Maximum="1"
                                           Style="{StaticResource MaterialDesignLinearProgressBar}"
                                           Height="4"
                                           Margin="{StaticResource SmallVerticalSpacing}"/>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <!-- Last Processing Info -->
                        <materialDesign:Card Grid.Row="2" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Last Processing Session" 
                                         Style="{StaticResource BodyMediumTextStyle}"
                                         Margin="{StaticResource SubItemMargin}"/>
                                
                                <TextBlock Text="{Binding LastProcessingTime}" 
                                         Style="{StaticResource BodySmallTextStyle}"
                                         Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
                                
                                <TextBlock Text="{Binding LastProcessingStatus}" 
                                         Style="{StaticResource LabelSmallTextStyle}"
                                         Foreground="{DynamicResource SuccessBrush}"
                                         Margin="{StaticResource SmallVerticalSpacing}"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Modern Status Bar -->
        <materialDesign:Card Grid.Row="2" 
                           Background="{DynamicResource SurfaceVariantBrush}"
                           materialDesign:ElevationAssist.Elevation="Dp1"
                           Margin="0"
                           Padding="{StaticResource MediumSpacing}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage}" 
                          Style="{StaticResource BodySmallTextStyle}"
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal" 
                          VerticalAlignment="Center">
                    <TextBlock Text="{Binding ApplicationVersion}" 
                             Style="{StaticResource LabelSmallTextStyle}"
                             VerticalAlignment="Center"
                             Margin="{StaticResource MediumHorizontalSpacing}"/>
                    
                    <!-- Connection Status Indicator -->
                    <Border Background="{DynamicResource SuccessBrush}" 
                          CornerRadius="8"
                          Width="8" Height="8"
                          VerticalAlignment="Center"
                          ToolTip="System Status: Online"
                          Margin="{StaticResource SmallHorizontalSpacing}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>