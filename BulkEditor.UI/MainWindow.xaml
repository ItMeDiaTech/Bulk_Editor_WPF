<Window x:Class="BulkEditor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:BulkEditor.UI.Controls"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="700" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2196F3" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Bulk Document Editor"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Process multiple Word documents for hyperlink validation and updates"
                               FontSize="14"
                               Foreground="#E3F2FD"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Select Files"
                            Command="{Binding SelectFilesCommand}"
                            Background="White"
                            Foreground="#2196F3"
                            Padding="12,6"
                            Margin="4"
                            BorderThickness="0"/>
                    <Button Content="Settings"
                            Command="{Binding OpenSettingsCommand}"
                            Background="White"
                            Foreground="#2196F3"
                            Padding="12,6"
                            Margin="4"
                            BorderThickness="0"/>
                    <Button Content="Clear All"
                            Command="{Binding ClearDocumentsCommand}"
                            Background="#757575"
                            Foreground="White"
                            Padding="12,6"
                            Margin="4"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Modern Documents TreeView -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    AllowDrop="True"
                    Drop="DocumentsArea_Drop"
                    DragOver="DocumentsArea_DragOver"
                    DragEnter="DocumentsArea_DragEnter"
                    DragLeave="DocumentsArea_DragLeave">
                <controls:ModernDocumentTreeView DataContext="{Binding}"/>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="8"
                          Background="Transparent"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Center"/>

            <!-- Side Panel -->
            <Border Grid.Column="2"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">

                        <!-- Processing Controls -->
                        <TextBlock Text="Processing"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>

                        <Button Content="Process Documents"
                                Command="{Binding ProcessDocumentsCommand}"
                                Padding="12,8"
                                Margin="0,0,0,8"
                                BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#616161"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="True">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#66BB6A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Revert Last Process"
                                Command="{Binding RevertLastSessionCommand}"
                                Background="#FF9800"
                                Foreground="White"
                                Padding="12,8"
                                Margin="0,0,0,8"
                                BorderThickness="0"
                                IsEnabled="{Binding IsRevertEnabled}"
                                Visibility="{Binding IsRevertEnabled, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Button Content="Cancel Processing"
                                Command="{Binding CancelProcessingCommand}"
                                Background="#F44336"
                                Foreground="White"
                                Padding="12,8"
                                Margin="0,0,0,16"
                                BorderThickness="0"
                                Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Progress Information -->
                        <TextBlock Text="Progress"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>

                        <StackPanel Margin="0,0,0,16">
                            <ProgressBar Value="{Binding ProgressValue}"
                                         Maximum="100"
                                         Height="8"
                                         Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding ProgressValue, StringFormat='{}{0:F0}%'}"
                                       HorizontalAlignment="Right"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding ProgressMessage}"
                                       FontSize="12"
                                       Foreground="#757575"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Statistics -->
                        <TextBlock Text="Statistics"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="{Binding ProcessedDocuments, StringFormat='Processed: {0}'}"
                                       FontSize="14"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding FailedDocuments, StringFormat='Failed: {0}'}"
                                       FontSize="14"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding ProcessingStatistics.TotalHyperlinks, StringFormat='Total Hyperlinks: {0}'}"
                                       FontSize="14"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding ProcessingStatistics.UpdatedHyperlinks, StringFormat='Updated: {0}'}"
                                       FontSize="14"
                                       Margin="0,0,0,2"/>
                        </StackPanel>

                        <!-- Export -->
                        <TextBlock Text="Export"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>

                        <Button Content="Export Results"
                                Command="{Binding ExportResultsCommand}"
                                Background="#757575"
                                Foreground="White"
                                Padding="12,8"
                                BorderThickness="0"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Enhanced Status Bar -->
        <Border Grid.Row="2"
                Background="{Binding StatusBackgroundColor}"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Icon -->
                <Border Grid.Column="0"
                        Background="{Binding StatusIconColor}"
                        Width="20" Height="20"
                        CornerRadius="10"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"
                        Visibility="{Binding ShowStatusIcon, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding StatusIcon}"
                               Foreground="White"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="10"/>
                </Border>

                <!-- Status Message -->
                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           Foreground="{Binding StatusTextColor}"
                           VerticalAlignment="Center"
                           FontWeight="Medium"/>

                <!-- Progress Bar -->
                <ProgressBar Grid.Column="2"
                             Value="{Binding ProgressValue}"
                             Maximum="100"
                             Width="150"
                             Height="6"
                             Margin="16,0,8,0"
                             Background="#E0E0E0"
                             Foreground="#4CAF50"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Progress Percentage -->
                <TextBlock Grid.Column="3"
                           Text="{Binding ProgressValue, StringFormat='{}{0:F0}%'}"
                           Foreground="{Binding StatusTextColor}"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ProgressBar Width="200"
                             Height="4"
                             IsIndeterminate="True"
                             Margin="0,0,0,16"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="16"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
